<dependency>
    <groupId>net.sourceforge.htmlunit</groupId>
    <artifactId>htmlunit-driver</artifactId>
    <version>2.52.0</version> <!-- Use the latest version available -->
</dependency>


import org.openqa.selenium.WebDriver;
import org.openqa.selenium.htmlunit.HtmlUnitDriver;

import java.io.File;

public class WebpageScreenshot {

    public static void main(String[] args) {
        // Create a new instance of the HtmlUnitDriver
        WebDriver driver = new HtmlUnitDriver();

        // Replace "https://example.com" with the URL of the webpage you want to capture
        String url = "https://example.com";
        driver.get(url);

        // Maximize the window to ensure the entire webpage is visible
        driver.manage().window().maximize();

        // Take a screenshot of the entire webpage
        File screenshotFile = ((HtmlUnitDriver) driver).getScreenshotAs(org.openqa.selenium.OutputType.FILE);

        // Replace "screenshot.png" with the desired file name and path
        screenshotFile.renameTo(new File("path/to/screenshot.png"));

        // Close the browser
        driver.quit();
    }
}