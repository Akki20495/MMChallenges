import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;

import java.io.File;

public class WebpageScreenshot {

    public static void main(String[] args) {
        // Set the path to your ChromeDriver executable
        System.setProperty("webdriver.chrome.driver", "path/to/chromedriver");

        // Create ChromeOptions and set it to run in headless mode
        ChromeOptions options = new ChromeOptions();
        options.addArguments("--headless");
        options.addArguments("--disable-gpu");

        // Initialize ChromeDriver with the configured options
        WebDriver driver = new ChromeDriver(options);

        // Replace "https://example.com" with the URL of the webpage you want to capture
        String url = "https://example.com";
        driver.get(url);

        // Wait for some time to ensure the page is fully loaded (you may need to adjust the wait time)
        try {
            Thread.sleep(2000);
        } catch (InterruptedException e) {
            e.printStackTrace();
        }

        // Take a screenshot of the entire webpage
        File screenshotFile = ((ChromeDriver) driver).getScreenshotAs(org.openqa.selenium.OutputType.FILE);

        // Replace "screenshot.png" with the desired file name and path
        screenshotFile.renameTo(new File("path/to/screenshot.png"));

        // Close the browser
        driver.quit();
    }
}